<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/numbersBackground"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/Salsa-Regular"
        android:gravity="center"
        android:text="Registrate como:"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:paddingTop="50dp"
        android:paddingBottom="100dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:text="Usuario"
        android:id="@+id/userB_bt"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Colaborador"
        android:backgroundTint="@color/black"
        android:id="@+id/helperB_bt"
        android:textSize="30dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Atras"
        android:backgroundTint="@color/black"
        android:id="@+id/BackOption_bt"
        android:textSize="30dp"
        />

</LinearLayout>