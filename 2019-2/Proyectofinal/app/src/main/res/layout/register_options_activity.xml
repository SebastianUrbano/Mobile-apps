<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/numbersbackground">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="390dp"
        android:layout_height="136dp"
        android:fontFamily="@font/salsafamilyfont"
        android:gravity="center"
        android:text="Registrate como:"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/userB_bt"
        android:layout_width="289dp"
        android:layout_height="148dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/salsafamilyfont"
        android:text="Usuario"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/helperB_bt"
        android:layout_width="289dp"
        android:layout_height="148dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/salsafamilyfont"
        android:text="Colaborador"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userB_bt" />

    <Button
        android:id="@+id/backOption_bt"
        android:layout_width="145dp"
        android:layout_height="71dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/salsafamilyfont"
        android:text="Atras"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helperB_bt" />

</androidx.constraintlayout.widget.ConstraintLayout>